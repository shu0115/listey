
<h1>Editing task</h1>

<%= form_for( :task, url: task_path( @task ), method: :put ) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each{ |msg| %>
        <li><%= msg %></li>
      <% } %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>

  <div class="field">
    <%= f.label :sort %><br />
    <%= f.number_field :sort %>
  </div>

  <div class="field">
    <%= f.label :group_id %><br />
    <%= f.number_field :group_id %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.update" ), data: { 'disable-with' => t( "menu.update" ) } %>
  </div>
<% end %>


<%= link_to t( "menu.show" ), task_path( @task ) %>
 | <%= link_to t( "menu.list" ), tasks_path %>
